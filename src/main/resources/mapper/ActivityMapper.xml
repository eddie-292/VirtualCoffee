<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mygroup.mapper.ActivityMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="mygroup.entity.Activity">
        <id column="activity_id" property="activityId" />
        <result column="title" property="title" />
        <result column="description" property="description" />
        <result column="date" property="date" />
        <result column="time" property="time" />
        <result column="duration" property="duration" />
        <result column="location" property="location" />
        <result column="attachment_url" property="attachmentUrl" />
        <result column="creator_user_id" property="creatorUserId" />
        <result column="activity_category" property="activityCategory" />
        <result column="activity_main_image_url" property="activityMainImageUrl" />
        <result column="is_finished" property="isFinished" />
        <result column="visitor_count" property="visitorCount" />
        <result column="participant_count" property="participantCount" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        activity_id, title, description, date, time, duration, location, attachment_url, creator_user_id, activity_category, activity_main_image_url, is_finished, visitor_count, participant_count
    </sql>

</mapper>
